@model PlanMyTripApp.Models.Hotel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetSearchResult</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Flight Search</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Origin", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.airports, new SelectList(Model.airports, "AirportName", "AirportName"), "Select Category", htmlAttributes: new { @class = "form-control", @required = "Required" })
                    @Html.ValidationMessageFor(model => model.airports, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Destination", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.airports, new SelectList(Model.airports, "AirportName", "AirportName"), "Select Category", htmlAttributes: new { @class = "form-control", @required = "Required" })
                    @Html.ValidationMessageFor(model => model.airports, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("Date", "", htmlAttributes: new { @class = "datetimepicker", @required = "Required" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <p>@Html.ActionLink("Back", "Index", "Home")</p>
    <div style="color:red">@TempData["error"]</div>
    <div style="color:red">@TempData["notfound"]</div>
</body>
</html>