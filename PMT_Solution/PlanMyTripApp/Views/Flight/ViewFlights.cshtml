@model IEnumerable<PlanMyTripApp.Models.Flight>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewFlights</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "AddFlight")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatsCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfSeatsAvailable)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatsCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfSeatsAvailable)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateFlight", new { flightNo = item.FlightNumber  }) |
                @Html.ActionLink("Details", "ViewFlight", new { flightNo = item.FlightNumber  }) |
                @Html.ActionLink("Delete", "DeleteFlight", new { flightNo = item.FlightNumber })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
